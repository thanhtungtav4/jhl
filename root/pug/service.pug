extends _layout/default

block vars
  -title        = 'JHL Home'
  -description  = ''
  -keywords     = ''
  -pageID       = 'top'
  -path         = ''
  -slider       = true

block container
  section.c-intros.text-center.mx-auto
    .container.container__inner.padding-bottom
      .c-intros__inner
        h1.c-intros__ttl.ttl TỔNG HỢP DỊCH VỤ TẠI JHL
        p.c-intros__txt Không phải mọi giấc mơ đều trở thành sự thật, vì có những giấc mơ chỉ trở thành sự thật trong điều kiện lý tưởng. Với nền giáo dục và môi trường sống tiên tiến tại những quốc gia phát triển hàng đầu thế giới của Mỹ & Canada, JHL tin rằng sự nghiệp thành công và cuộc sống phồn thịnh không là mục tiêu nằm ngoài tầm với.
        a.c-intros__btn.btn(href="#" ) Xem thêm
  section.c-service
    .container.container__inner
      .row
        .col-12.padding-top  
          h2.c-service__ttl.ttl.mb-5.text-center.ttl03.hex01 DỊCH VỤ JHL ĐỒNG HÀNH CÙNG BẠN 
        .col-md-3.col-6
          .c-service__img 
            img(src=path+'assets/images/banner-my.jpg', alt="Định cư Mỹ diện làm việc - EB3")
          p Định cư Mỹ diện làm việc
        .col-md-3.col-6
          .c-service__img 
            img(src=path+'assets/images/tonronto-tower-Canada.jpg', alt="Định cư Canada - diện làm việc")
          p Định cư Canada - diện làm việc
        .col-md-3.col-6
          .c-service__img 
            img(src=path+'assets/images/study-abroad.jpg', alt="Tư vấn du học Mỹ & Canada")
          p Tư vấn du học Mỹ & Canada
        .col-md-3.col-6
          .c-service__img 
            img(src=path+'assets/images/du-lich-hoa-ky.jpg', alt="Tư vấn du lịch Mỹ & Canada")
          p Tư vấn du lịch Mỹ & Canada
        .col-12.mx-auto.text-center.mt-5
          a.c-slide__btn.btn.btn-radius0(href="#" ) TÌM HIỂU NGAY                               
  section.c-procedure
    .container.container__inner.tab__inner
     .row 
      .col-12 
        h2.ttl.text-center.ttl03.hex01 QUY TRÌNH HỒ SƠ XIN VISA TẠI JHL
     .tab-frame
      .c-procedure__nav
        input#tab1(type='radio' checked='' name='tab')
        label(for='tab1') XIN VISA ĐỊNH CƯ EB-3
        input#tab2(type='radio' name='tab')
        label(for='tab2') XIN VISA ĐỊNH CƯ CANADA
        .tab
          img(src=path+'assets/images/tab01.jpg', alt="XIN VISA ĐỊNH CƯ EB-3" )
        .tab 
          img(src=path+'assets/images/tab02.jpg', alt=" XIN VISA ĐỊNH CƯ CANADA" )
  section.c-winner  
     .container
      .row 
        .col-md-8.mx-auto.col-12 
          h2.ttl.c-winner__ttl.text-center.ttl03.hex01 MỘT SỐ CÂU CHUYỆN 
            | <br> THÀNH CÔNG CỦA KHÁCH HÀNG
      .row.mt-5
        .col-md-6.col-12 
          a.c-winner__item(href="")
            .c-winner__img(style="background-image: url(assets/images/img__item01.jpg);")
              h5.c-winner__txt Mr. Hoàng hiện thực hóa giấc mơ Mỹ cùng JHL
        .col-md-6.col-12 
          .row
            .col-md-12 
              a.c-winner__item(href="")
                .c-winner__img.c-winner__img--sub(style="background-image: url(assets/images/img_winner.jpg);")
                  h5.c-winner__txt Mr. Hoàng hiện thực hóa giấc mơ Mỹ cùng JHL
            .col-md-12
              a.c-winner__item(href="")
                .c-winner__img.c-winner__img--sub(style="background-image: url(assets/images/img_winner.jpg);")
                  h5.c-winner__txt Mr. Hoàng hiện thực hóa giấc mơ Mỹ cùng JHL
  section.c-why
    .container.container__why
      .row
        .col-12
          h2.c-why__ttl.ttl.text-center VÌ SAO JHL ĐƯỢC KHÁCH HÀNG
            | <br>TIN TƯỞNG LỰA CHỌN
        .col-md-3.col-6
          p.c-why__num 2000+
          picture
            source(srcset=path+'assets/images/icon_note.webp' type="image/webp")
            img(src=path+'assets/images/icon_note.png' type="image/png" alt="Visa Đầu Tư Định Cư EB3 đã và đang được thụ lý")
          p.c-why__txt Visa Đầu Tư Định Cư EB3 đã và đang được thụ lý
        .col-md-3.col-6  
          p.c-why__num 600+
          picture
            source(srcset=path+'assets/images/icon_note.webp'  type="image/webp")
            img(src=path+'assets/images/icon__book.png' type="image/png" alt="Hồ sơ di trú thành công nộp vào Sở di trú Mỹ")
          p.c-why__txt Hồ sơ di trú thành công nộp vào Sở di trú Mỹ
        .col-md-3.col-6  
          p.c-why__num 1000+
          picture
            source(srcset=path+'assets/images/icon__partner.webp' type="image/webp")
            img(src=path+'assets/images/icon__partner.png' type="image/png" alt="Thường trú nhân và gia đình hiện thực hóa ước mơ định cư cùng JHL")
          p.c-why__txt Thường trú nhân và gia đình hiện thực hóa ước mơ định cư cùng JHL
        .col-md-3.col-6  
          p.c-why__num 6 tháng
          picture
            source(srcset=path+'assets/images/icon__time.webp' type="image/webp")
            img(src=path+'assets/images/icon__time.png' type="image/png" alt="Thời gian chấp nhận hồ sơ EB-3 kỷ lục") 
          p.c-why__txt  Thời gian chấp nhận hồ sơ EB-3 kỷ lục     
  section.c-user
    .container.container__why
      .row
        .col-12   
          h2.ttl.c-user__ttl.hex01 TẠI SAO NÊN SỬ DỤNG DỊCH VỤ CỦA JHL?
      .row.mt-5 
        .col-md-6.col-12 
          ul.c-user__list 
           li Mang đến các giải pháp toàn diện về du học, việc làm, định cư
           li Là văn phòng đại diện của các luật sư di trú hàng đầu: giúp tiến trình nộp hồ sơ định cư nhanh, tỷ lệ thành công cao khi nộp đơn xin định cư và bảo vệ quyền lợi khách hàng.
           li Có trụ sở và văn phòng tại nước ngoài, các chuyên viên tư vấn có kinh nghiệm làm việc và sinh sống lâu năm tại nước sở tại: hỗ trợ tốt nhất cho những học sinh - sinh viên đang học tập và sinh sống tại đó    
        .col-md-6.col-12 
          ul.c-user__list 
            li Là đối tác chiến lược của các doanh nghiệp hàng đầu tại vùng, đặc biệt là các vùng đang khan hiếm nguồn lực trong việc phát triển nền kinh tế: hỗ trợ quá trình tìm kiếm việc làm.
            li Lựa chọn các đối tác, các trường học và các nhà cung cấp dịch vụ tốt nhất cho học sinh – sinh viên. Quy trình làm việc chuyên nghiệp, tăng tỷ lệ thành công visa.
            li Các chuyên viên tư vấn nhiệt tình, hỗ trợ trong suốt quá trình nộp đơn cho đến khi lấy được visa định cư. 
        .col-12.mx-auto.text-center.mt-5
          a.c-slide__btn.btn.btn-radius0(href="#" ) ĐĂNG KÝ NGAY           
  section.c-trust
    .container
      .row
        .col-10.mx-auto.text-center.mb-5
          h2.ttl.c-trust__ttl.hex01 ĐÁNH GIÁ CỦA KHÁCH HÀNG JHL     
        .customer-swiper.col-12
          .trust__item.text-center
            img.c-trust__img(src=path+'assets/images/user4.jpg' type="image/jpg")
            .c-trust__content.position-relative
              img.c-trust__tag.position-absolute(src=path+'assets/images/tag.png'  type="image/png")
              p.c-trust__name Trần Phương
              p.c-trust__local Định cư EB-3
              p.c-trust__txt Đi định cư nước ngoài tất nhiên không dễ, cần kiên nhẫn và tin tưởng nhiều. Thế nhưng tôi vẫn muốn cảm ơn JHL đã đồng hành và khiến tôi yên tâm trong suốt quá trình xúc tiến hồ sơ, vượt qua những trở ngại. Cám ơn đội ngũ JHL đã đem đến cơ hội tuyệt vời này cho tôi.
          .trust__item.text-center
            img.c-trust__img(src=path+'assets/images/user1.jpg' type="image/jpg")
            .c-trust__content.position-relative
              img.c-trust__tag.position-absolute(src=path+'assets/images/tag.png'  type="image/png")
              p.c-trust__name Mai Vân
              p.c-trust__local Định cư Canada
              p.c-trust__txt Sau một thời gian tìm hiểu các công ty tư vấn về chương trình di trú Canada, tôi đã bị sự chuyên nghiệp và tận tâm của đội ngũ JHL thuyết phục. Trong suốt quá trình đồng hành, tôi chưa bao giờ cảm thấy hối tiếc vì đã đặt niềm tin vào JHL. Hiện tại tôi đã nhận được thẻ xanh và bắt đầu hòa nhập cùng cuộc sống mới, tại vùng đất mà tôi yêu thích. Cám ơn JHL.
          .trust__item.text-center
            img.c-trust__img(src=path+'assets/images/user2.jpg' type="image/jpg")
            .c-trust__content.position-relative
              img.c-trust__tag.position-absolute(src=path+'assets/images/tag.png'  type="image/png")
              p.c-trust__name Đặng Phú Mỹ
              p.c-trust__local Định cư Canada
              p.c-trust__txt Tư vấn chuẩn chất lượng dịch vụ 5 sao, tôi rất hài lòng về dịch vụ ở JHL. Đội ngũ tư vấn chắc hẳn đều là chuyên gia, các bạn tư vấn và xử lý hồ sơ rất chuyên nghiệp. Tôi nhất định sẽ giới thiệu JHL cho người thân hoặc bạn bè khi họ có ý định đi định cư.
          .trust__item.text-center
            img.c-trust__img(src=path+'assets/images/user3.jpg' type="image/jpg")
            .c-trust__content.position-relative
              img.c-trust__tag.position-absolute(src=path+'assets/images/tag.png'  type="image/png")
              p.c-trust__name Nguyễn Thanh Toàn
              p.c-trust__local Định cư EB-3
              p.c-trust__txt Cả gia đình tôi đã đến Mỹ được hơn 1 tháng mà tôi vẫn thấy lâng lâng vì vui sướng. Tôi có việc làm ngay khi đến đây và con tôi được đi học miễn phí. Các thủ tục mướn nhà, đăng ký việc làm, hòa nhập cộng đồng... đều được JHL quan tâm nhiệt tình. Thật sự cảm ơn JHL rất nhiều vì đã hỗ trợ gia đình tôi chu đáo.

     
  
block script
  script.
    $(".customer-swiper").slick({
          autoplay:true,
          autoplaySpeed:10000,
          speed:1000,
          slidesToShow:3,
          slidesToScroll:1,
          pauseOnHover:false,
          dots:true,
          pauseOnDotsHover:true,
          cssEase:'linear',
          draggable:false,
          nav: false,
          prevArrow: null,
          nextArrow: null, 
          responsive: [
          {
            breakpoint: 992,
            settings: {
              slidesToShow: 2,
            },
          },
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 1,
            },
          },
        ],
        });
    