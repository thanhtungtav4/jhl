extends _layout/default

block vars
  -title        = 'Liên hệ - JHL Home'
  -description  = ''
  -keywords     = ''
  -pageID       = 'top'
  -path         = ''
  -slider       = false

block container
  section.c-blog 
    .c-blog__banner
      picture 
        source(srcset=path+'assets/images/page-contact.avif' type="image/avif" )
        source(srcset=path+'assets/images/page-contact.webp' type="image/webp")
        img(src=path+'assets/images/page-contact.jpg' type="image/jpg" alt="blog") 
      h1 LIÊN HỆ
  section.c-contact.c-contact__bg 
    .container.container__inner
      ul.c-contact__list 
        li.c-contact__item 
          p.c-contact__ttl--sub HỖ TRỢ KHÁCH HÀNG  
          p.c-contact__txt Bạn đang cần trao đổi với JHL ngay? Liên hệ với JHL thông qua 3 cách sau:
          ul.c-contact__lists.c-contact__lists--sub  
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/phone.png', alt="phone") 
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/mail.png', alt="mail") 
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/faq.png', alt="faq") 
        li.c-contact__item.borderlr 
          p.c-contact__ttl--sub VĂN PHÒNG ĐẠI DIỆN
          p.c-contact__txt Lầu 8, 123 Lý Chính Thắng, Phường 7, Quận 3, TP. HCM
        li.c-contact__item  
          p.c-contact__ttl--sub FOLLOW JHL
            ul.c-contact__lists 
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/fb.png', alt="fb") 
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/tw.png', alt="fb") 
              li  
                a(href, taget="_black")
                  img(src=path+'assets/images/zl.png', alt="fb") 
  section.c-help
    .container.c-help__border
      h3.c-help__ttl.ttl TƯ VẤN MIỄN PHÍ
        form
          .form-row
            .form-group.col-md-6
              input.form-control(type='text' placeholder='First Name')
            .form-group.col-md-6
              input.form-control(type='text' placeholder='Last Name')
          .form-row
            .form-group.col-md-6
              input.form-control(type='number' placeholder='Phone')
            .form-group.col-md-6
              input.form-control(type='email' placeholder='Email')
          .form-row
            .form-group.col-12
              input.form-control(type='text' placeholder='Are you new clients?')
          .form-row
            .form-group.col-12
              textarea.form-control(type='text' placeholder='Message' rows="5")
          button.btn.btn-primary(type='Đăng ký') Đăng ký
  section.c-contact__map 
    iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.3198192119517!2d106.68271701480083!3d10.786798792314485!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f2c53a767f5%3A0xfa6ca17d73cffec8!2zTOG6p3UgOCwgMTIzIEzDvSBDaMOtbmggVGjhuq9uZywgVsO1IFRo4buLIFPDoXUsIFF14bqtbiAzLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2sid!4v1634740047556!5m2!1svi!2sid' width='100%' height='350' style='border:0;' allowfullscreen='' loading='lazy')

